{
  "name": "globe-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API for world economic indicators map",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "DATABASE_URL=${DATABASE_URL:-postgresql://globe:globe_dev_password@localhost:5433/globe} node-pg-migrate up",
    "migrate:down": "DATABASE_URL=${DATABASE_URL:-postgresql://globe:globe_dev_password@localhost:5433/globe} node-pg-migrate down",
    "seed": "tsx src/seed/seedCountries.ts",
    "ingest": "tsx src/jobs/runOnce.ts",
    "backfill": "tsx src/jobs/backfillHistory.ts"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.0",
    "axios": "^1.6.2",
    "country-to-currency": "^1.0.11",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "lru-cache": "^10.1.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "node-pg-migrate": "^6.2.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}

